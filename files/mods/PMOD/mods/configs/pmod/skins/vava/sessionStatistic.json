
// Сессионная статистика
// Session statistic
"sessionStatistic": {

    // Сообщение на случай отсутствия проведенных боев за сессию.
    // Message in case of absence spent battles for session.
    "noBattles": {
        // Иконка сообщения, путь к изображению.
        // Message icon, path to an image.
        "icon": "",

        // Подложка сообщения, путь к изображению.
        // Message background, path to an image.
        "background": "{{config}}skins/vava/images/sessionStatisticBackgroundNull.png",

        // Заготовка сообщения. Поддержка только двух макросов (PlayerName, CurrentVersion). Нет поддержки цветов. Нет поддержки пользовательских макросов.
        // Message text. Supports only two macros (PlayerName, CurrentVersion). No color support. No support for custom macros.
        "message": "<br><br><p align='center'><font face='$TitleFont' size='15' color='#E9E2BF'>PMOD - Session statistics</font><br><br>Hello {{PlayerName}}, you need to fight at least one battle to display changes in statistics!</p> "
    },

    "pages": [

        // Общая статистика
        // Total stats
        {

            // Идентификатор страницы
            // Page identificator
            "pageName": "overalStatistic",

            // Набор макросов
            // Macroses List
            "macroses": "overal",

            // Подложка сообщения
            // Message background.
            "messageBackground": {

                // true - Использовать подложку
                // true - Use a substrate
                "enable": true,

                // Путь к изображению с поддержкой макросов (сыгран хотя бы один бой)
                // Path to an image with support for macros (played at least one fight)
                "path": "{{config}}skins/vava/images/sessionStatisticBackground{{c:WN8}}.png"
            },

            // Основная обёртка сообщения
            // General message wrapp
            "templateWrapper": [
                "<font size='14' color='#A3A09B'><textformat leading='2' tabstops='[0,90,150]'>{{items}}</textformat></font>",
                "<br><img src='img://{{config}}skins/vava/images/null.png' height='6' width='200'><br>",
                "<a href='event:showPage:tanksEfficiency'>tanks</a>&nbsp;&nbsp;&nbsp;&nbsp;",
                "<a href='event:resetStatistic'>clear</a>&nbsp;&nbsp;&nbsp;&nbsp;",
                "<a href='event:reloadConfig'>[R]</a>"
            ],

            // Заготовка сообщения. Список макросов смотрите в файле readme. Также можно использовать пользовательские макросы
            // The blank message. List of macros watch in readme file. You can also use users macros
            "templateItem": [
                "winrate<tab><tab><font color='#F5F2E1'>{{Wins}} / {{Battles}}</font><tab>{{UM:rgWinrate}}<font color='{{c:WinRate}}'>{{WinRate}}%</font>{{UM:line}}",
                "experience<tab><tab><font color='#F5F2E1'>{{XP}}</font><tab>{{UM:rgXP}}<font color='{{c:AvgXP}}'>{{AvgXP}}</font>{{UM:line}}",
                "damage<tab><tab><font color='#F5F2E1'>{{DamageDealt}}</font><tab>{{UM:rgDamage}}<font color='{{c:AvgDamageDealt}}'>{{AvgDamageDealt}}</font>{{UM:line}}",
                "frags<tab><tab><font color='#F5F2E1'>{{Frags}}</font><tab>{{UM:rgFrags}}<font color='{{c:AvgFrags}}'>{{AvgFrags}}</font>{{UM:line}}",
                "credits<tab><tab><font color='{{c:AccountCredits}}'>{{AccountCredits}}</font><tab>{{UM:rgCredits}}<font color='{{c:PureCredits}}'>{{PureCredits}}</font>"
            ],

            // Список цветовых подстановок. "название_макроса": [{"value": значение,  "color": "#код_цвета"}, {"value": значение,  "color": "#код_цвета"}]
            // List of color permutations. "macro_name": [{"value": value,  "color": "#color_code"}, {"value": value,  "color": "#color_code"}]
            "colors": {
                "WinRate": [{"value": 47, "color": "#EE0000"}, {"value": 49, "color": "#FE7903"}, {"value": 52, "color": "#F8F400"}, {"value": 57, "color": "#60FF00"}, {"value": 64, "color": "#02C9B3"}, {"value": 101, "color": "#D042F3"}],
                "AvgDamageDealt": [{"value": 800, "color": "#EE0000"}, {"value": 1500, "color": "#FE7903"}, {"value": 2000, "color": "#F8F400"}, {"value": 2500, "color": "#60FF00"}, {"value": 3000, "color": "#02C9B3"}, {"value": 9999,  "color": "#D042F3"}],
                "AvgFrags": [{"value": 0.6, "color": "#EE0000"}, {"value": 0.8, "color": "#FE7903"}, {"value": 1, "color": "#F8F400"}, {"value": 1.3, "color": "#60FF00"}, {"value": 2, "color": "#02C9B3"}, {"value": 999, "color": "#D042F3"}],
                "AvgXP": [{"value": 0, "color": "#D6D7D4"}, {"value": 201, "color": "#EE0000"}, {"value": 301, "color": "#FE7903"}, {"value": 601, "color": "#F8F400"}, {"value": 801, "color": "#60FF00"}, {"value": 1101, "color": "#02C9B3"}, {"value": 99999, "color": "#D042F3"}],
                "PureCredits": [{"value": 0, "color": "#D44B5D"}, {"value": 9999999, "color": "#C3D84C"}],
                "AccountCredits": [{"value": 0, "color": "#D44B5D"}, {"value": 9999999, "color": "#C3D84C"}],
                "WN8": [{"value": 315, "color": "Red"}, {"value": 760,  "color": "Orange"}, {"value": 1325, "color": "Yellow"}, {"value": 1980, "color": "Green"}, {"value": 2570, "color": "Cyan"}, {"value": 9999,  "color": "Purple"}],
                "DiffWinrate": [{"value": 0, "color": "red"}, {"value": 9999999, "color": "green"}],
                "DiffAvgDamageDealt": [{"value": 0, "color": "red"}, {"value": 9999999, "color": "green"}],
                "DiffAvgFrags": [{"value": 0, "color": "red"}, {"value": 9999999, "color": "green"}],
                "DiffAvgXP": [{"value": 0, "color": "red"}, {"value": 9999999, "color": "green"}]
            },

            // Пользовательские макросы
            // Custom macros
            "userMacros": {
                "UM:line": "<br><img src='img://{{config}}skins/vava/images/line.png' height='2' width='220'><br>",
                "UM:rgWinrate": "<img src='img://{{config}}skins/vava/images/{{c:DiffWinrate}}.png' width='11' height='10'>",
                "UM:rgXP": "<img src='img://{{config}}skins/vava/images/{{c:DiffAvgXP}}.png' width='11' height='10'>",
                "UM:rgDamage": "<img src='img://{{config}}skins/vava/images/{{c:DiffAvgDamageDealt}}.png' width='11' height='10'>",
                "UM:rgFrags": "<img src='img://{{config}}skins/vava/images/{{c:DiffAvgFrags}}.png' width='11' height='10'>",
                "UM:rgCredits": "<img src='img://{{config}}skins/vava/images/null.png' width='11' height='10'>"
            }
        },

        // Эфективность на всех танках списком
        // Efficiency on all tanks list
        {

            // Page identificator
            "pageName": "tanksEfficiency",

            // Macroses List
            "macroses": "byTanks",

            // General message wrapp
            "templateWrapper": [
