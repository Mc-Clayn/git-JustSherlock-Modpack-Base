            "templateItem": "<font size='12' color='#E5D8BE'><a href='event:showPage:tankEfficiency:{{tank_id}}'>{{CM:infoIcon}}</a>{{UM:name}}{{UM:credits}}{{CM:horizDelimiter3px}}{{UM:avgfrags}}{{CM:horizDelimiter3px}}{{UM:battles}}</font>",

            "itemsSortingMacros": "PureCredits:desc",

