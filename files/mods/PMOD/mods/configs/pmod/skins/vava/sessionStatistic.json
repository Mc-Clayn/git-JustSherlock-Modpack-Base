                "PureCredits": [{"value": 0, "color": "#D44B5D"}, {"value": 9999999, "color": "#C3D84C"}],
                "AccountCredits": [{"value": 0, "color": "#D44B5D"}, {"value": 9999999, "color": "#C3D84C"}],
