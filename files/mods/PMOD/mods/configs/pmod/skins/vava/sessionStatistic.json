                "<a href='event:showPage:tanksEfficiency'>tanks</a>&nbsp;&nbsp;&nbsp;&nbsp;",
                "<a href='event:resetStatistic'>clear</a>&nbsp;&nbsp;&nbsp;&nbsp;",
                "<a href='event:reloadConfig'>[R]</a>"
            ],

            // The blank message. List of macros watch in readme file. You can also use users macros
            "templateItem": [
